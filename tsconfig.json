{
  "compilerOptions": {
    "sourceMap": true, //
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true, //
    "strict": false,
    "target": "es6",
    "lib": ["ESNext"], //
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "ES6",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
